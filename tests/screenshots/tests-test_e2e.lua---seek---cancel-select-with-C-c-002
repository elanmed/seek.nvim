01|local get_key = function()                                                 
02|  local ok, char = pcall(vim.fn.getchar)                                   
03|  if not ok then return { type = 'Error', char = nil, } end                
04|  local escape = 27                                                        
05|  if char == escape then return { type = 'error', char = nil, } end        
06|  return { type = 'Success', char = vim.fn.nr2char(char), }                
07|end                                                                        
